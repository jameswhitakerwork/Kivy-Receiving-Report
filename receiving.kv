<Search_Bar>:
#5
#Parent: Add_Items_Tab
	orientation: 'horizontal'
	size_hint_y: 0.1
	search_input: search_box

	Button:
		size_hint_x: 0.25
		text: 'Refresh Items'
		on_release: app.root.refresh_items()


	Button:
		size_hint_x: 0.25
		text: 'Search'
		on_release: self.parent.parent.children[0].children[0].item_search(search_box.text)

	TextInput:
		id: search_box
		size_hint_x: 0.75
		multiline: False
		on_text_validate: self.parent.parent.children[0].children[0].item_search(self.text)

<Item_Scroller>:
#5
#parent: Add_Items_Tab
	id: itemscroller

	Item_List:
		id: itemlist
		cols: 1
		width: root.width
		size_hint: (None, None)

<Item_List>:
#6
#parent: Item_Scroller
	id: itemlist

<Item_Selector>:
#7
#parent: Item_List
	label: label
	orientation: 'vertical'
	size_hint_y: None
	size_y: '40dp'
#	size_hint: (None, None)

	Label:
		id: label
		text: '*'
		text_size: root.width, None
		size: self.texture_size

	BoxLayout:
		orientation: 'horizontal'
		Slider:
			size_hint_x: 0.75
			id: slider
			step: 1
			range: (0, 100)

		Label:
			size_hint_x: 0.05
			text: str(int(slider.value))

		Button:
			size_hint_x: 0.2
			text: 'Add'
			on_release: 
				self.parent.parent.parent.add_item(self.parent.parent.id, slider.value)
				slider.value = 0






